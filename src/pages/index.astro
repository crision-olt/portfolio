---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import { yearsInIndustry } from "../js/yearsInIndustry";
---

<DefaultLayout>
  <section class="container">
    <h1>
      <span class="intro-welcome">Welcome, my name is <br></span>
      <span class="intro-name text-swipe-animation">Luke Liasi.</span>
    </h1>
    <h2 class="intro">I build compelling <br class="sm:block hidden" />digital experiences.</h2>
    <p class="desc">Software engineer, passionate about solving problems with code.<br class="breakspace" />Over {yearsInIndustry()} years of industry experience specialising in JavaScript, React & Node.</p>
    <div class="wave-container"></div>
  </section>
</DefaultLayout>

<style lang="scss">
  h1 {
    line-height: 2.5rem;
    margin: 1rem 0;
  }

  .intro-welcome {
    font-family: var(--font-family-IBM-Plex-Mono);
    font-weight: 600;
    font-size: var(--font-size-base);
  }

  .intro-name {
    color: white;
    font-family: var(--font-family-Mukta);
    font-size: var(--font-size-14xl);
    overflow: hidden;
    display: inline-block;
    padding: 10px 0;
  }

  .intro {
    color: var(--color-silver-300);
    font-size: var(--font-size-11xl);
    line-height: 3.25rem;
    margin: 1rem 0;
  }

  .desc {
    font-size: var(--font-size-lg);
    color: var(--color-silver-100);
    line-height: 1.5em;
  }

  .breakspace {

  }

  @keyframes fadeInWave {
    0% { opacity: 0 }
    100% { opacity: 0.3 }
  }

  .wave-container {
    animation: fadeInWave 1.5s;
    background: transparent;
    height: 100vh;
    left: 0;
    opacity: 0.3;
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
    z-index: -1;
    overflow: hidden;
  }

  // Dark mode
  html.dark {
    .intro-welcome {
      color: var(--color-mint);
    }
  }

  // Light mode
  html.light {
    .intro-welcome {
      color: var(--color-blue-600);
    }
  }
</style>

<script hoist>
  import "../js/wave.js";
</script>